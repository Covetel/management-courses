<?xml version="1.0" encoding="UTF-8"?>
<openerp>
   <data>
     <record model="ir.ui.view" id="management_course_form_view">
       <field name="name">management_course_form</field>
       <field name="model">management.course</field>
       <field name="type">form</field>
       <field name="arch" type="xml">
         <form string="Course Form">
            <group colspan="2">
              <field name="course_name"/>
              <separator colspan="2"/>
             <field name="start_date"/>
             <separator colspan="2"/>
             <field name="end_date"/>
             <separator colspan="2"/>
             <field name="hours"/>
             <separator colspan="2"/>
             <field name="place"/>
           </group>
           <group colspan="2">
             <field name="instructor_ids">
                <form>
                  <field name="name"/>
                  <field name="cedula_rif"/>
                </form>
             </field>
           </group>
           <notebook colspan="4">
             <page string="Ateendes">
                <field name="attendee_ids">
                   <form string="Contact" version="7.0">
                    <field name="image" widget='image' class="oe_avatar oe_left" options='{"preview_image": "image_medium"}'/>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/> (
                            <field name="is_company" on_change="onchange_type(is_company)" class="oe_inline"/> <label for="is_company" string="Is a Company?"/>)
                        </div>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" />
                        </h1>
                         <field name="cedula_rif" placeholder=""/>
                        <field name="parent_id"
                            placeholder="Company"
                            domain="[('is_company', '=', True)]" context="{'default_is_company': True}"
                            attrs="{'invisible': [('is_company','=', True)]}"/>
                        <group>
                            <field name="category_id" widget="many2many_tags" placeholder="Tags..."/>
                            <field name="function" placeholder="e.g. Sales Director"/>
                            <field name="email" required="context.get('force_email', False)"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                        </group>
                    </div>
                </form>

                <tree string="Contacts">
                    <field name="name"/>
                    <field name="function" invisible="1"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="user_id" invisible="1"/>
                    <field name="is_company" invisible="1"/>
                    <field name="country" invisible="1"/>
                    <field name="country_id" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                </tree>

                </field>
             </page>
             <page string="Technical Requirement">
               <field name="technical_requirement">
               </field>
             </page>
            </notebook>
         </form>
       </field>
     </record>
      
    <record model="ir.ui.view" id="management_course_tree_view">
     <field name="name">management_course_tree</field>
     <field name="model">management.course</field>
     <field name="type">tree</field>
     <field name="arch" type="xml">
       <tree string="Course">
         <field name="course_name"/>
       </tree>
     </field>
    </record>

    <record model="ir.ui.view" id="res_partner_form_view_2">
     <field name="name">res.partner.instructor.form</field>
     <field name="model">res.partner</field>
     <field name="type">form</field>
     <field name="inherit_id" ref="base.view_partner_form" />
     <field name="arch" type="xml">
       <data>
          <field name="name" position="after">
            <field name="cedula_rif" placeholder="Cedula-Rif"/>
          </field>
          <xpath expr="//form[@string='Contact']/sheet/div/h1/field[@name='name']" position="after">
           <field name="cedula_rif" placeholder="Cedula" style="width: 70%%"/>
          </xpath>
       </data>
     </field>
   </record>
     

    <record model="ir.ui.view" id="technical_requirement_course_form_view">
      <field name="name">technical.requirement.form</field>
      <field name="model">technical.requirement.course</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Form Technical Requirement">
         <field name="requirement"/>
        </form>
      </field>
    </record>    
    
     <record model="ir.ui.view" id="technical_requirement_tree_view">
      <field name="name">technical.requirement.tree</field>
      <field name="model">technical.requirement.course</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
       <tree string="Form Technical Requirement">
         <field name="requirement"/>
       </tree>
      </field>
     </record>

    <record model="ir.actions.act_window" id="management_course_action">
     <field name="name">Course</field>
     <field name="res_model">management.course</field>
     <field name="view_type">form</field>
     <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="management_course_menu" name="Management Course"/>
    <menuitem id="course_data" name="Register" parent="management_course_menu"/>
    <menuitem id="course_agregar" name="Course" parent="course_data" action="management_course_action"/>

  </data>
</openerp>


