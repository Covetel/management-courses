<?xml version="1.0" encoding="UTF-8"?>
<openerp>
   <data>

    <report id="report_certificates_print" model="management.course" 
        name="management.course" rml="/vagrant/OpenERP-Modules/management-courses/report/report_certificates.rml" 
        string="Certificados" usage="default" auto="False" />

     <record model="ir.ui.view" id="management_course_form_view">
       <field name="name">management_course_form</field>
       <field name="model">management.course</field>
       <field name="type">form</field>
       <field name="arch" type="xml">
         <form version="7.0" string="Course Form">
           <field invisible="1" name="state" />
           <div states="get">
             <h2>Export Complete</h2>
             <p>Here is the exported certificates file: <field
             name="certificate_pdf" readonly="1" fielname="name"
             /></p>
           </div>
           <header states="choose">
             <button class="oe_highlight" string="Generate Certificates"
                     name="%(report_certificates_print)d" type="action" />
           </header>
           <sheet states="choose">
            <group colspan="2" col="2">
              <field name="name"/>
              <separator colspan="2"/>
             <field name="start_date"/>
             <separator colspan="2"/>
             <field name="end_date"/>
             <separator colspan="2"/>
             <field name="hours"/>
             <separator colspan="2"/>
             <field name="place"/>
             <separator colspan="2"/>
             <field name="company_ids" string="Company"/>
           </group>
           <notebook colspan="4">
             <page string="Participants">
                <field name="participant_ids">
                  <form>
                    <!--field name="course_id"/>-->
                    <field name="name"/>
                    <field name="cedula_rif" context="{'cedula_rif': active_id}"  on_change="onchange_cedula(cedula_rif,context)"/>
                    <field name="is_instructor"/>
                  </form>
                  <tree>
                    <field name="cedula_rif"/>
                    <field name="name"/>
                    <field name="is_instructor"/>
                  </tree>
                </field>
             </page>
             <page string="Technical Requirement">
               <field name="technical_requirement">
               </field>
             </page>
            </notebook>
           </sheet>
           <footer states="get">
             <button class="oe_highlight" string="Close" type="object"
                     name="restart_state" />  
           </footer>
         </form>
       </field>
       </record>

    <record model="ir.ui.view" id="management_course_tree_view">
    <field name="name">management_course_tree</field>
     <field name="model">management.course</field>
     <field name="type">tree</field>
     <field name="arch" type="xml">
       <tree string="Course">
         <field name="name"/>
         <field name="company_ids" string="Company"/>
       </tree>
     </field>
    </record>
     

    <record model="ir.ui.view" id="technical_requirement_course_form_view">
      <field name="name">technical.requirement.form</field>
      <field name="model">technical.requirement.course</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Form Technical Requirement">
         <field name="name" string="Requirement"/>
        </form>
      </field>
    </record>    
    
     <record model="ir.ui.view" id="technical_requirement_tree_view">
      <field name="name">technical.requirement.tree</field>
      <field name="model">technical.requirement.course</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
       <tree string="Form Technical Requirement">
         <field name="name" string="Requirement"/>
       </tree>
      </field>
     </record>

    <record model="ir.actions.act_window" id="management_course_action">
     <field name="name">Course</field>
     <field name="res_model">management.course</field>
     <field name="view_type">form</field>
     <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="management_course_menu" name="Management Courses"/>
    <menuitem id="course_data" name="Register" parent="management_course_menu"/>
    <menuitem id="course_agregar" name="Courses" parent="course_data" action="management_course_action"/>

  </data>
</openerp>


